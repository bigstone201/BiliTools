{
  "manifest_version": 3,
  "name": "Bilibili Pro Speed - B站超级倍速",
  "version": "1.0.0",
  "description": "为B站播放器添加自定义倍数，支持高达4倍速播放。",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.bilibili.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_end"
    }
  ]
}